#include<stdio.h>
#include<stdlib.h>
#define MAXSIZE 50
int queue[MAXSIZE];
int front=-1,rear=-1;
void printindex()
{
	printf("Menu:\n");
	printf("1.Enqueue\n");
	printf("2.Dequeue\n");
	printf("3.IsFull\n");
	printf("4.IsEmpty\n");
	printf("5.Display\n");
	printf("6.Exit\n");
	printf("7.Show Index\n");
}
void enqueue(int item)
{
	if(rear==MAXSIZE-1)
	{
		printf("Queue if full\n");
		exit(1);
	}
	else
	{
		if(front==-1)
		front=0;
		rear=rear+1;
		queue[rear]=item;
	}
}
void dequeue()
{
	int item;
	if(front==-1)
	{
		printf("Queue is empty\n");
	}
	else
	{
		item=queue[front];
		front=front+1;
		if(front>rear)
		{
			front=rear=-1;
		}	
		printf("Dequeued element is %d\n",item);
	}
}
void isFull()
{
	if(rear==MAXSIZE-1)
	{
		printf("Queue is full\n");
	}
	else
	{
		printf("Queue is not full\n");
	}
}
void isEmpty()
{
	if(front==-1)
	{
		printf("Queue is empty\n");
	}
	else
	{
		printf("Queue is not empty\n");
	}
}
void display()
{
	int p;
	if(front==-1)
	{
		printf("Queue is empty\n");
	}
	else
	{
		p=front;
		while(p<=rear)
		{
			printf("%d ",queue[p]);
			p++;
		}
	}
	printf("\n");
}
int main()
{
	int ch,item;
	printindex();
	while(1)
	{
		printf("Enter your choice:");
		scanf("%d",&ch);
		switch(ch)
		{
			case 1:
				printf("Enter the element to be enqueued:");
				scanf("%d",&item);
				enqueue(item);
				break;
			case 2:
				dequeue();
				break;
			case 3:
				isFull();
				break;
			case 4:
				isEmpty();
				break;
			case 5:
				display();
				break;
			case 6:
				return 0;
				break;
			case 7:
				printindex();
				break;
			default:
				printf("Wrong Choice\n");
		}
	}
}
